<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="@color/background_dark"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello, mate"
            android:layout_marginTop="34dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="32sp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_marginEnd="120dp"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Добро пожаловать в дружеское сообщество!"/>

    <android.support.design.widget.TextInputLayout
            android:textColorHint="@color/white_70"
            android:layout_width="match_parent"
            android:layout_marginTop="120dp"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/etLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray_edit_text"
                android:textColor="@color/white_70"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColorHint="@color/white_70"
                android:hint="login"
                android:text="Tim"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/white_70"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:backgroundTint="@color/gray_edit_text"
                android:textColor="@color/white_70"
                android:textSize="18sp"
                android:textColorHint="@color/white_70"
                android:hint="password"
                android:textStyle="bold"
                android:text="qwe"
                android:id="@+id/etPassword"/>
    </android.support.design.widget.TextInputLayout>

    <Button
            android:id="@+id/btnEnter"
            android:layout_width="match_parent"
            android:layout_marginTop="44dp"
            android:background="@drawable/bg_clickable_purple_100dp"
            android:text="Войти"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:focusable="true"
            android:clickable="true"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnNewUser"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_clickable_transparent_bordered_100dp"
            android:text="Я новый пользователь"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:focusable="true"
            android:clickable="true"
            android:layout_height="wrap_content"/>

    <Space android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"/>

    <ImageView
            android:gravity="bottom"
            android:layout_gravity="center_horizontal"
            android:layout_width="130dp"
            android:layout_height="23dp"
            android:layout_marginBottom="24dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView"/>
</LinearLayout>